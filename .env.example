# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_PREFER_GRPC=true
QDRANT_API_KEY=

# Embedding Configuration
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
EMBEDDING_SPARSE_MODEL_NAME=naver/efficient-splade-VI-BT-large-doc
EMBEDDING_BATCH_SIZE=128
EMBEDDING_NORMALIZE=true

# Data Configuration
DATA_PARQUET_PATH=data/sentiment.parquet
PREPROCESSING_REMOVE_STOPWORDS=true
PREPROCESSING_REMOVE_PUNCTUATION=true
PREPROCESSING_LOWERCASE=true

# Collection Configuration
COLLECTION_NAME=sentiment_vectors
VECTOR_SIZE=384

# Search Configuration
SEARCH_DEFAULT_LIMIT=10
SEARCH_SCORE_THRESHOLD=0.7

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/vector_sentiment.log
LOG_ROTATION=10 MB
LOG_RETENTION=7 days
